<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habittracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitTracker">

        <!-- Declarar MainActivityMenu como la actividad principal -->
        <activity
            android:name=".MainActivityMenu"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declarar HabitCreationActivity -->
        <activity
            android:name=".HabitCreationActivity"
            android:exported="false" />

        <!-- Declarar HabitDisplayActivity -->
        <activity
            android:name=".HabitDisplayActivity"
            android:exported="false" />

    </application>

</manifest>

